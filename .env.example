# ====================================
# Flask Application Settings
# ====================================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
SECURITY_PASSWORD_SALT=your-password-salt-change-this

# ====================================
# Database Configuration
# ====================================
# Development database
DATABASE_URL=sqlite:///app.db
# Alternative for development with a different name
DEV_DATABASE_URL=sqlite:///app-dev.db
# Production database (PostgreSQL example)
# DATABASE_URL=postgresql://user:password@localhost/snowsports

# ====================================
# File Uploads
# ====================================
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=csv,xlsx,xls
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# ====================================
# Session & Security
# ====================================
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
PERMANENT_SESSION_LIFETIME=604800  # 7 days in seconds
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600  # 1 hour

# Security headers (for production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax
# REMEMBER_COOKIE_SECURE=True
# REMEMBER_COOKIE_HTTPONLY=True

# ====================================
# Email Configuration
# ====================================
# SMTP Server Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
MAIL_DEBUG=False
MAIL_SUPPRESS_SEND=False  # Set to True in development to prevent sending emails

# Email Subjects
MAIL_SUBJECT_PREFIX=[Snowsports] 
SECURITY_EMAIL_SUBJECT_REGISTER=Welcome to Snowsports Program Manager
SECURITY_EMAIL_SUBJECT_PASSWORD_NOTICE=Your password has been reset
SECURITY_EMAIL_SUBJECT_PASSWORD_CHANGE_NOTICE=Your password has been changed
SECURITY_EMAIL_SUBJECT_CONFIRM=Please confirm your email
SECURITY_EMAIL_SUBJECT_PASSWORD_RESET=Password reset instructions

# ====================================
# Application Settings
# ====================================
APP_NAME=Snowsports Program Manager
APP_ADMIN=admin@example.com

# Pagination
PAGINATION_PER_PAGE=20

# Rate Limiting (requests per time period)
RATELIMIT_DEFAULT=200 per day;50 per hour

# ====================================
# Feature Flags
# ====================================
# Set these to True/False to enable/disable features
SECURITY_CONFIRMABLE=True
SECURITY_RECOVERABLE=True
SECURITY_TRACKABLE=True
SECURITY_CHANGEABLE=True
SECURITY_SEND_REGISTER_EMAIL=True

# ====================================
# Development Settings
# ====================================
# Set these to True in development
DEBUG=True
SQLALCHEMY_ECHO=True
MAIL_DEBUG=True

# ====================================
# Production Settings
# ====================================
# Set these in production
# FLASK_ENV=production
# DEBUG=False
# SQLALCHEMY_ECHO=False
# MAIL_DEBUG=False
